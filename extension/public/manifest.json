{
  "manifest_version": 3,
  "name": "Aura: Accessibility Companion",
  "version": "1.0",
  "description": "An AI-powered bridge for interface accessibility.",
  "permissions": ["activeTab", "scripting", "storage", "audioCapture", "videoCapture", "offscreen", "sidePanel"],
  "action": {
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ]
}
